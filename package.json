{
  "name": "conjuration",
  "productName": "Conjuration",
  "version": "0.1.0",
  "description": "Conjuration: A pixel art editor for creating eerie, glitchy, low-res digital rituals inspired by retro aesthetics and occult themes",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "pixel art",
    "animation",
    "glitch art",
    "retro aesthetics",
    "serial experiments lain",
    "morrowind",
    "occult digital art"
  ],
  "author": "Conjuration Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "gif.js": "^0.2.0"
  },
  "build": {
    "appId": "com.conjuration.app",
    "productName": "Conjuration",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Conjuration"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Graphics;RasterGraphics"
    }
  }
}